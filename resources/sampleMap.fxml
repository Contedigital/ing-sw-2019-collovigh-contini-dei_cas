        </VBox>

    </left>
    <center>
        <GridPane  fx:id="mappozza" xmlns:fx="http://javafx.com/fxml" id="mappozza"  prefHeight="200" prefWidth="320"
                   alignment="center" hgap="10" vgap="10" styleClass ="mappozza">
        </GridPane>
    </center>
    <right>
        <VBox >
            <Label text="Weapons Here"></Label>
            <Label text="PowerUps Here"></Label>
        </VBox>
    </right>
    <bottom>
        <VBox>
            <Label text="Plancia"></Label>
        </VBox>
    </bottom>

